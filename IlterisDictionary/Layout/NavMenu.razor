<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">IlterisDictionary</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Helper.Routes.Home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Ilteris' Yurt
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Helper.Routes.Dictionary">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Dictionary
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Helper.Routes.Meanings">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Meanings
            </NavLink>
        </div>

        @if (IsDebugActive())
        {
            <div>
                <NavLink class="nav-link" href="@Helper.Routes.Debug">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>Debug
                </NavLink>
            </div>
        }
    </nav>
</div>

@code
{
    private bool IsDebugActive()
    {
#if DEBUG
    return true;
#elif !DEBUG
        return false;
#endif
    }
}
